{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true, // Enabling strict mode for better type checking
    "moduleResolution": "node", // Ensure Node.js style module resolution
    "resolveJsonModule": true, // Allow importing JSON modules
    "esModuleInterop": true, // Ensure compatibility with CommonJS and ES modules
    "noEmitOnError": true // Prevent output if there are errors
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
